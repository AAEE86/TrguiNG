{
  "package": {
    "productName": "transgui-ng",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:8080/",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npx webpack"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.openscopeproject.transgui-ng",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://**",
          "http://**"
        ]
      },
      "fs": {
        "scope": [
          "$CONFIG/transgui-ng.json"
        ],
        "readFile": true,
        "writeFile": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": "^(/)|([a-zA-Z]:[\\\\/])|(\\\\\\\\)|((file:|https?:)//)"
      },
      "window": {
        "setTitle": true,
        "close": true
      }
    },
    "windows": [
      {
        "title": "Transmission Remote GUI",
        "width": 1024,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "cli": {
      "description": "Next gen remote GUI for transmission torrent daemon",
      "args": [
        {
          "name": "torrent",
          "index": 1,
          "multiple": true,
          "takesValue": true,
          "description": "torrent file or magnet link url"
        }
      ]
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}